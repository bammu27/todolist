
<%if(pointing==='item-list'){%>
  <%- include("headwork") -%> 

<%}else{%>

 <%- include("headitem") -%> 

<%}%>


<body >

  <!-- Rest of your HTML content -->
  <div class="container p-4   " style="border-radius: 10px;">
    <h1 class="display-5 text-center mb-4 text-danger fw-bolder">To-Do List</h1>
    <div class="card mb-4">
      <div class="card-body">
        <h4 class="card-title text-primary fw-bolder  text-center" style="font-size: 30px;"> <%=day1 %></h4>
        <ul class="list-group">
          <% for(var i = 0;i<newitems.length;i++){ %>
          <li class="list-group-item fw-bold " style="color: #E966A0;font-size: 20px;"><%= newitems[i] %></li>
          <% } %>
        </ul>
      </div>
    </div>
    <form action="/" method="post" class="mb-4">
      <div class="input-group">
        <input type="text" name="newitem" class="form-control" placeholder="Add an item">
        <button type="submit" class="btn btn-success btn-lg" name="list" value=<%=webpage %>>Add Item</button>
      </div>
    </form>

    <%if(pointing==="item-list"){%>
    <form action='/' class="mb-4">
      
        <button type="submit" class="btn  btn-lg "  style="color: #FFDEB9; background-color: #FF0060;"><%=pointing%></button>
     
    </form>
    <%}else{%>
      <form action='/work' class="mb-4">
      
        <button type="submit" class="btn btn-lg" style="color:white; background-color: #FC4F00;" ><%=pointing%></button>
     
    </form>
    <%}%>

  </div>

  <%- include("footer") -%> 